<style>
    .padding-td {
        padding:5px
    }
</style>

<h1>Data Seluruh Karyawan PT Konoha Makmur Sentosa</h1>
<hr>

<a  href="/karyawan/tambah">
    <button style="margin: 5px; background-color: aqua;">
        Tambah
    </button>
    
</a>

<table border= "2">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Gender</th>
            <th>NIP</th>
            <th colspan="3">Pilihan</th>
        </tr>
    </thead>
    <tbody>
        <% for( let i = 0; i < karyawan.length; i++ ) { %> 
            <tr>
                <td class="padding-td"><%= karyawan[i].nama %></td>
                <td class="padding-td"><%= karyawan[i].gender %></td>
                <td class="padding-td"><%= karyawan[i].nip %></td>
                <td class="padding-td">
                    <a href="/karyawan/detail/<%= karyawan[i].id%>">
                        <button>Lihat detail</button>
                    </a>
                </td>
                <td class="padding-td">
                    <a href="/karyawan/edit/<%= karyawan[i].id%>">
                        <button style="background-color: rgb(221, 248, 15);">Edit</button>
                    </a>
                </td>
                <td class="padding-td">
                    <a href="/karyawan/hapus/<%= karyawan[i].id%>" 
                    onclick="return confirm('Yakin mau hapus <%= karyawan[i].nama %> ???')">
                        <button style="background-color: red; color: white;">Hapus</button>
                    </a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>
<br> <hr>

